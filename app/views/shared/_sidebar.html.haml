%nav.side-bar.screen.flex.flex-column.sticky.top.bottom
  - lists.each do |list|
    = link_to list_list_items_path(list[:list].id), class: list_classes(list[:list].id, params[:list_id]) do
      .flex
        = list[:list].title
      .flex
        = list[:item_count]
  .sticky.new-list-btn
    %button.btn-link{ "data-controller" => "modal", "data-action" => "click->modal#toggle" } New List

